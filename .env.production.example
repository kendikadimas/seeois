# Production Environment Configuration
# Copy this file to .env on production server and adjust values

APP_NAME="SEEO IS"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://seeoftunsoed.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# BCRYPT_ROUNDS=12

PHP_CLI_SERVER_WORKERS=4

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Session Configuration (IMPORTANT FOR PRODUCTION)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_COOKIE="${APP_NAME}_session"
SESSION_PATH=/
SESSION_DOMAIN=.seeoftunsoed.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache Configuration
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI="${APP_URL}/google/auth/callback"

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Trust Proxies (IMPORTANT for HTTPS behind proxy/load balancer)
# Set this to true if your app is behind a proxy/load balancer
TRUST_PROXIES=*
# Or specify specific IPs: TRUST_PROXIES="192.168.1.1,192.168.1.2"

# Force HTTPS
FORCE_HTTPS=true
